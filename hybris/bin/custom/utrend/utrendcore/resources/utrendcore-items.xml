<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

    <collectiontypes>
        <collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
        <collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
                        type="set"/>
    </collectiontypes>

    <enumtypes>
        <enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
            <value code="BLACK"/>
            <value code="STEELBLUE"/>
            <value code="SADDLEBROWN"/>
            <value code="OLIVEDRAB"/>
            <value code="DARKGRAY"/>
            <value code="ORANGE"/>
            <value code="PINK"/>
            <value code="PURPLE"/>
            <value code="CRIMSON"/>
            <value code="SILVER"/>
            <value code="WHITE"/>
            <value code="GOLD"/>
            <value code="NAVY"/>
            <value code="PEACHPUFF"/>
            <value code="MEDIUMTURQUOISE"/>
            <value code="ROSYBROWN"/>
            <value code="GAINSBORO"/>
            <value code="BEIGE"/>
        </enumtype>

        <!-- Enum Type order status -->
        <enumtype code="LegacyOrderStatusEnum" generate="true" autocreate="true" dynamic="true">
            <value code="COMPLETED"/>
            <value code="PENDING"/>
            <value code="CANCELLED"/>
            <value code="SHIPPED"/>
        </enumtype>

    </enumtypes>


    <relations>
        <relation code="LegacyOrder2LegacyOrderEntry" localized="false" generate="true" autocreate="true">

            <sourceElement type="LegacyOrder" qualifier="legacyOrder" cardinality="one">
                <modifiers read="true" write="true" search="true"/>
            </sourceElement>

            <targetElement type="LegacyOrderEntry" qualifier="legacyOrderEntry" cardinality="many">
                <modifiers read="true" write="true" search="true" optional="true" partof="true" />
            </targetElement>

        </relation>
    </relations>

    <itemtypes>

        <!-- Add your item definitions here -->
        <itemtype code="Product"
                  autocreate="false" generate="false">
            <description>Utrend product add creation date custom</description>
            <attributes>
                <attribute qualifier="utrendCreationDate" type="java.util.Date">
                    <description> product creation Date</description>
                    <modifiers/>
                    <persistence type="property"/>
                </attribute>

                <attribute qualifier="dayPassed" type="java.lang.Long" >
                    <persistence type="dynamic" attributeHandler="productDayPassedAttributeHandler" />
                </attribute>

            </attributes>
        </itemtype>


        <!-- Definition of Legacy Order ItemType -->
        <itemtype code="LegacyOrder"
                  autocreate="true" generate="true">
            <description>Utrend legacy order</description>
            <deployment table="LegacyOrders" typecode="12345"/>

            <attributes>
                <attribute qualifier="orderNumber" type="java.lang.String">
                    <description> identifier order</description>
                    <modifiers unique="true"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="orderTotal" type="java.lang.Long">
                    <description> price order total</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="orderStatus" type="LegacyOrderStatusEnum">
                    <description> status order</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="customer" type="Customer">
                    <description> Customer hybris entity </description>
                    <persistence type="property"/>
                </attribute>
            </attributes>

        </itemtype>

        <!-- Definition of Legacy Order Entry ItemType -->
        <itemtype code="LegacyOrderEntry"
                  autocreate="true" generate="true">
            <description>Utrend legacy order entry</description>
            <deployment table="LegacyOrderEntries" typecode="12346"/>

            <attributes>
                <attribute qualifier="uid" type="java.lang.String">
                    <description> universal identifier of order entry</description>
                    <modifiers unique="true"/>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="product" type="java.lang.String">
                    <description> product name</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="quantity" type="java.lang.Long">
                    <description> quantity of product in order entry</description>
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="basePrice" type="java.lang.Long">
                    <description> price before taxes </description>
                    <persistence type="property"/>
                </attribute>

                <attribute qualifier="total" type="java.lang.Long" >
                    <persistence type="dynamic" attributeHandler="legacyOrderEntryTotalAttributeHandler" />
                </attribute>
            </attributes>

        </itemtype>

        <itemtype code="PopulateProductCreationDateCronJob" autocreate="true" generate="true" extends="CronJob">
        </itemtype>

        <!-- TypeGroups are for structure of this file only -->

        <typegroup name="Apparel">
            <itemtype code="ApparelProduct" extends="Product"
                      autocreate="true" generate="true"
                      jaloclass="com.talos.utrend.core.jalo.ApparelProduct">
                <description>Base apparel product extension that contains additional attributes.</description>
                <attributes>
                    <attribute qualifier="genders" type="GenderList">
                        <description>List of genders that the ApparelProduct is designed for</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

            <itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.talos.utrend.core.jalo.ApparelStyleVariantProduct">
                <description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
                <attributes>
                    <attribute qualifier="style" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color/Pattern of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>

                    <attribute qualifier="swatchColors" type="SwatchColorSet">
                        <description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>

            </itemtype>

            <itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.talos.utrend.core.jalo.ApparelSizeVariantProduct">
                <description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
                <attributes>
                    <attribute qualifier="size" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Size of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>
        </typegroup>

        <typegroup name="Electronics">
            <itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
                      autocreate="true" generate="true"
                      jaloclass="com.talos.utrend.core.jalo.ElectronicsColorVariantProduct">
                <description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
                <attributes>
                    <attribute qualifier="color" type="localized:java.lang.String"
                               metatype="VariantAttributeDescriptor">
                        <description>Color of the product.</description>
                        <modifiers/>
                        <persistence type="property"/>
                    </attribute>
                </attributes>
            </itemtype>

        </typegroup>

    </itemtypes>
</items>
